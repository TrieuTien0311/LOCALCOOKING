<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailEvaluateFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtDanhGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="240dp"
                    android:layout_weight="1"
                    android:text="Đánh giá"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSao1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:text="4.8"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgSao1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="-10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_star" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtChatLuong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chất lượng giảng dạy"
                            android:textColor="#EF7A7777" />

                        <ProgressBar
                            android:id="@+id/prbChatLuong"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progress="85"
                            android:progressDrawable="@drawable/progress_rounded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtThaiDo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thái độ &amp; Sự nhiệt tình"
                            android:textColor="#EF7A7777" />

                        <ProgressBar
                            android:id="@+id/prbThaiDo"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progress="80"
                            android:progressDrawable="@drawable/progress_rounded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtDungGio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đúng giờ"
                            android:textColor="#EF7A7777" />

                        <ProgressBar
                            android:id="@+id/prbDungGio"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progress="90"
                            android:progressDrawable="@drawable/progress_rounded" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtKhongGian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Không gian &amp; Tiện nghi"
                            android:textColor="#EF7A7777" />

                        <ProgressBar
                            android:id="@+id/prbKhongGian"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progress="85"
                            android:progressDrawable="@drawable/progress_rounded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtChiPhi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chi phí hợp lý"
                            android:textColor="#EF7A7777" />

                        <ProgressBar
                            android:id="@+id/prbChiPhi"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progress="80"
                            android:progressDrawable="@drawable/progress_rounded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtThongTin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông tin chính xác"
                            android:textColor="#EF7A7777" />

                        <ProgressBar
                            android:id="@+id/prbThongTin"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:progress="90"
                            android:progressDrawable="@drawable/progress_rounded" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <View
