                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_filter_gray"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/txtTatCa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Tất cả"
                            android:textColor="#734322"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtSLTatCa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="(909)"
                            android:textColor="#9C7C4B2A"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_filter_orange"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="6dp">

                        <TextView
                            android:id="@+id/txtCoNhanXet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Có nhận xét"
                            android:textColor="#734322"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtSLNhanXet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="(768)"
                            android:textColor="#9C7C4B2A"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_filter_orange"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="6dp">

                        <TextView
                            android:id="@+id/txtCoHinhAnh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Có hình ảnh"
                            android:textColor="#734322"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtSLHinhAnh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="(105)"
                            android:textColor="#9C7C4B2A"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_filter_gray"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="6dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtSao2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sao"
                                android:textColor="#734322"
                                android:textSize="13sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imgSao2"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_weight="1"
                                android:src="@drawable/ic_star" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView69"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="(Tất cả)"
                            android:textColor="#9C7C4B2A"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/avatar_evaluate"
                            app:civ_border_color="#FFFFFF"
                            app:civ_border_width="0dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Anh Thư"
                                android:textColor="#734322"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView31"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView32"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView30"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView29"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView28"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView33"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/ic_participated" />

                        <TextView
                            android:id="@+id/txtDaThamGia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:text="Đã tham gia • 01/10/2025"
                            android:textColor="#E544C364"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtNoiDungDG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Buổi học diễn ra rất thú vị và thoải mái. Giảng viên hướng dẫn tận tình, luôn giải thích chi tiết từng bước và đưa ra nhiều mẹo nhỏ trong bếp mà trước giờ mình chưa biết. Không khí lớp học vui vẻ, mọi người được trực tiếp thực hành chứ không chỉ ngồi nghe lý thuyết."
                        android:textAlignment="gravity"
                        android:textColor="#000000"
                        android:textSize="11sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:background="#BFD9D9D9"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/txtPhanHoi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phản hồi của trung tâm"
                            android:textColor="#734322"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNDPhanHoi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:justificationMode="inter_word"
                            android:text="LocalCooking Class cảm ơn bạn đã tham gia lớp học, hẹn gặp bạn ở những lớp học khác nhé."
                            android:textColor="#000000"
                            android:textSize="11sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view11"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="5dp"
                        android:background="#EEEEEE" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgAvatar2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/avatar_evaluate"
                            app:civ_border_color="#FFFFFF"
                            app:civ_border_width="0dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTen2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thảo Vy"
                                android:textColor="#734322"
                                android:textSize="11sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView39"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView38"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView37"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView36"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView35"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_star" />
                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView34"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/ic_participated" />

                        <TextView
                            android:id="@+id/txtDaThamGia2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:text="Đã tham gia • 25/08/2025"
                            android:textColor="#E544C364"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtNoiDungDG2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:justificationMode="inter_word"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Tôi học được nhiều món ăn địa phương ngon từ buổi học này. Giảng viên nhiệt huyết chỉ dẫn, bầu không khí lớp học rất vui vẻ. Tôi rất tận hưởng buổi học thú vị này."
