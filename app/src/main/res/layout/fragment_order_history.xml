<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderHistoryFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="0dp"
            android:background="#FFFFFF"
            app:tabIndicatorColor="#6A3B1A"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorGravity="bottom"
            app:tabSelectedTextColor="#6A3B1A"
            app:tabTextAppearance="@style/TabTextAppearance"
            app:tabTextColor="#7A7777">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabDatTruoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt trước"
                android:visibility="visible" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabDaHoanThanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã hoàn thành"
                android:visibility="visible" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/tabDaHuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã huỷ"
                android:visibility="visible" />
        </com.google.android.material.tabs.TabLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/tab_shadow_orange" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/ViewHienThi"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <!-- Shadow dưới TabLayout -->

</FrameLayout>