<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    tools:context=".Bill">

    <!-- Header cố định -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC59D"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            android:id="@+id/txtDiaDiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:text="Hóa đơn của tôi"
            android:textColor="#6A3B1A"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtThoiGian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="16dp"
            android:text="Chi tiết hóa đơn đặt lịch"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDiaDiem" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Nội dung cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFF3E0"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Card chính chứa thông tin hóa đơn -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="15dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="20dp">

                    <!-- Card nhỏ: Đặt lịch lớp học -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:id="@+id/imageView27"
                                android:layout_width="60dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="15dp"
                                app:srcCompat="@drawable/booked" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView44"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ĐẶT LỊCH LỚP HỌC"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView45"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="-715.000₫"
                                    android:textColor="#D32F2F"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Thông tin chi tiết -->
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingHorizontal="17dp"
                        android:stretchColumns="1">

                        <TableRow android:paddingVertical="6dp">

                            <TextView
                                android:text="Trạng thái"
                                android:textSize="15sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/button3"
                                android:layout_width="20dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="90dp"
                                android:insetTop="0dp"
                                android:insetBottom="0dp"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:text="Thành công"
                                android:textAllCaps="false"
                                android:textColor="#28C533"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:backgroundTint="#C2F9C9"
                                app:cornerRadius="20dp" />
                        </TableRow>

                        <TableRow android:paddingVertical="6dp">

                            <TextView
                                android:text="Thời gian thanh toán"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtGioHoc"
                                android:layout_gravity="end"
                                android:text="21:45"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow android:paddingVertical="6dp">

                            <TextView
                                android:text="Ngày thanh toán"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/txtNgayHoc"
                                android:layout_gravity="end"
                                android:text="03/09/2025"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow android:paddingVertical="6dp">

                            <TextView
                                android:text="Quá trình giao dịch"
                                android:textSize="15sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="end|center_vertical"
                                app:srcCompat="@drawable/ic_down_tn" />
                        </TableRow>
                    </TableLayout>

                    <!-- Đường nét đứt -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="17dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/dashed_line_tn" />

                    <!-- Thông tin bổ sung -->
                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:paddingHorizontal="17dp"
                        android:stretchColumns="1">

                        <TableRow android:paddingVertical="6dp">

                            <TextView android:text="Mã giao dịch" />

                            <TextView
                                android:id="@+id/txtMaGiaoDic"
                                android:layout_gravity="end"
                                android:text="91992550407" />
                        </TableRow>

                        <TableRow android:paddingVertical="6dp">

                            <TextView
                                android:layout_marginRight="50dp"
                                android:text="Tài khoản/thẻ" />

                            <TextView
                                android:id="@+id/txtPhuongThuc"
                                android:layout_gravity="end"
                                android:text="Momo" />
                        </TableRow>

                        <TableRow android:paddingVertical="8dp">

                            <TextView
                                android:layout_marginRight="70dp"
                                android:text="Tổng hóa đơn"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtSoTien"
                                android:layout_gravity="end"
                                android:text="715.000₫"
                                android:textColor="#D32F2F"
                                android:textStyle="bold" />
                        </TableRow>
                    </TableLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card đỏ: THÔNG TIN ĐẶT VÉ -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cVThongTinVe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#D45155"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <TextView
                    android:id="@+id/textView59"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="24dp"
                    android:text="THÔNG TIN ĐẶT VÉ"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <!-- Card trắng lồi lên (hiệu ứng vé xé) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cVCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-36dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imAnhHoc"
                            android:layout_width="183dp"
                            android:layout_height="89dp"
                            android:layout_weight="1"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            android:minWidth="0dp"
                            android:minHeight="0dp"
                            app:srcCompat="@drawable/hue" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="15dp">

                            <TextView
                                android:id="@+id/txtTenLopHoc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ẩm thực địa phương Huế"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="7dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView44"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingTop="1dp"
                                    android:paddingRight="2dp"
                                    app:srcCompat="@drawable/ic_location_tn" />

                                <TextView
                                    android:id="@+id/txtDiaDiemBill"
                                    android:layout_width="173dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:paddingTop="3dp"
                                    android:text="23 Lê Duẩn, Đà Nẵng" />
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:id="@+id/view25"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:background="#4C4C4C" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/textView54"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="30dp"
                                android:text="Người đặt:" />

                            <TextView
                                android:id="@+id/txtNguoiDatBill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nhóm V3T"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/textView61"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="50dp"
                                android:text="Số điện thoại:" />

                            <TextView
                                android:id="@+id/txtSDTBill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0905100789"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/textView64"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thời gian:" />

                            <TextView
                                android:id="@+id/txtThoiGianHocBill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="14:00 - 17:00"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/textView65"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ngày:" />

                            <TextView
                                android:id="@+id/txtNgayHocBill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="02/10/2025"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:id="@+id/textView67"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số người:" />

                            <TextView
                                android:id="@+id/txtSoPaxBill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1 người"
                                android:textColor="@color/black"
                                android:textStyle="bold" />
                        </TableRow>
                    </TableLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        app:cardBackgroundColor="#F2F2F2"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp">

                        <TextView
                            android:id="@+id/txtNoiDungBill"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="Trải nghiệm lớp học ẩm thực Huế tinh tế, đa dạng với món cung đình và dân dã, đậm đà hương vị, cầu kỳ trong từng chi tiết." />
                    </androidx.cardview.widget.CardView>

                    <!-- PHẦN CHỈNH SỬA: 2 hình tròn và đường kẻ giữa -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="15dp">

                        <!-- Hình tròn bên TRÁI -->

                        <!-- Hình tròn bên PHẢI -->

                        <!-- Đường kẻ nét đứt ở giữa -->
                        <View
                            android:id="@+id/view26"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:background="@drawable/dashed_line_tn" />
                    </RelativeLayout>

                    <!-- Mã vạch -->
                    <ImageView
                        android:id="@+id/imMaCodeBill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        app:srcCompat="@drawable/code_tn" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>