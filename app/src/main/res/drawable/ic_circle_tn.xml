<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bóng mềm nhiều lớp (rất giống Material Design) -->
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="8dp">
        <shape android:shape="oval">
            <solid android:color="#1F000000" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="#0F000000" />
        </shape>
    </item>

    <!-- Hình tròn chính (màu bạn muốn) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#F3DDC6" />   <!-- Màu nền -->
            <size
                android:width="24dp"
                android:height="24dp" />        <!-- Quan trọng: width = height → luôn tròn -->
        </shape>
    </item>

</layer-list>