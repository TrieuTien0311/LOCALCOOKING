<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp viền -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E4DFD8" />
        </shape>
    </item>

    <!-- Lớp nền, đẩy xuống để lộ viền 3 cạnh -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFF9EF" />
        </shape>
    </item>
</layer-list>