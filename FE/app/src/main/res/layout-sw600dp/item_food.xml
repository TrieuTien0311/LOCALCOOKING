<?xml version="1.0" encoding="utf-8"?>
<!-- Layout cho tablet - item_food.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:background="@drawable/bg_food_tt"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingTop="16dp"
    android:paddingRight="20dp"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/txtFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bg_red_dish"
        android:paddingLeft="28dp"
        android:paddingTop="6dp"
        android:paddingRight="28dp"
        android:paddingBottom="6dp"
        android:text="Bánh bèo chén"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnPre"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_back"
            app:tint="#CB7E61" />

        <!-- Hình ảnh món ăn với CardView bo tròn -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp">

            <!-- CardView bọc ảnh để bo tròn -->
            <androidx.cardview.widget.CardView
                android:layout_width="380dp"
                android:layout_height="250dp"
                android:elevation="5dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imgMonAn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/banhbeo" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/circle1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/ic_circle_tn"
                    app:tint="#BA5632" />

                <ImageView
                    android:id="@+id/circle2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    app:srcCompat="@drawable/ic_circle_tn"
                    app:tint="#DCA790" />

                <!-- Giữ lại circle3, circle4, circle5 để tránh lỗi nhưng ẩn đi -->
                <ImageView
                    android:id="@+id/circle3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_circle_tn"
                    app:tint="#DCA790" />

                <ImageView
                    android:id="@+id/circle4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_circle_tn"
                    app:tint="#DCA790" />

                <ImageView
                    android:id="@+id/circle5"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_circle_tn"
                    app:tint="#DCA790" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/btnNext"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:rotation="180"
            app:srcCompat="@drawable/ic_back"
            app:tint="#CB7E61" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới thiệu:"
            android:textColor="#747474"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtGioiThieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="8dp"
            android:justificationMode="inter_word"
            android:text="&quot; Món bánh nhỏ xinh đặc trưng xứ Huế,  với lớp bánh mềm mịn, tôm khô thơm  và mỡ hành béo ngậy, ăn kèm nước  mắm chua ngọt đậm đà. &quot;"
            android:textColor="#747474"
            android:textSize="17sp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp" />

        <TextView
            android:id="@+id/textView56"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyên liệu:"
            android:textColor="#747474"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtNguyenLieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:justificationMode="inter_word"
            android:text="Bột gạo, bột năng, tôm khô giã nhuyễn,  hành phi, tóp mỡ, mắm nêm hoặc nước  mắm pha."
            android:textColor="#747474"
            android:textSize="17sp"
            android:textStyle="italic"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>

</LinearLayout>
