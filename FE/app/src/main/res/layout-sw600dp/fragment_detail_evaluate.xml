<?xml version="1.0" encoding="utf-8"?>
<!-- Layout cho tablet - fragment_detail_evaluate.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailEvaluateFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingBottom="60dp">

            <!-- Header đánh giá -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/txtDanhGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Đánh giá"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtSao1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.8"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imgSao1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="6dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_star" />
            </LinearLayout>

            <!-- Progress bars đánh giá -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtChatLuong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chất lượng giảng dạy"
                            android:textColor="#EF7A7777"
                            android:textSize="17sp" />

                        <ProgressBar
                            android:id="@+id/prbChatLuong"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_marginTop="6dp"
                            android:progress="85"
                            android:progressDrawable="@drawable/progress_rounded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtThaiDo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thái độ &amp; Sự nhiệt tình"
                            android:textColor="#EF7A7777"
                            android:textSize="17sp" />

                        <ProgressBar
                            android:id="@+id/prbThaiDo"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_marginTop="6dp"
                            android:progress="80"
                            android:progressDrawable="@drawable/progress_rounded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtDungGio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đúng giờ"
                            android:textColor="#EF7A7777"
                            android:textSize="17sp" />

                        <ProgressBar
                            android:id="@+id/prbDungGio"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_marginTop="6dp"
                            android:progress="90"
                            android:progressDrawable="@drawable/progress_rounded" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtKhongGian"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Không gian &amp; Tiện nghi"
                            android:textColor="#EF7A7777"
                            android:textSize="17sp" />

                        <ProgressBar
                            android:id="@+id/prbKhongGian"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_marginTop="6dp"
                            android:progress="85"
                            android:progressDrawable="@drawable/progress_rounded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtChiPhi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chi phí hợp lý"
                            android:textColor="#EF7A7777"
                            android:textSize="17sp" />

                        <ProgressBar
                            android:id="@+id/prbChiPhi"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_marginTop="6dp"
                            android:progress="80"
                            android:progressDrawable="@drawable/progress_rounded" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtThongTin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông tin chính xác"
                            android:textColor="#EF7A7777"
                            android:textSize="17sp" />

                        <ProgressBar
                            android:id="@+id/prbThongTin"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:layout_marginTop="6dp"
                            android:progress="90"
                            android:progressDrawable="@drawable/progress_rounded" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="10dp"
                android:background="#EEEEEE" />

            <!-- Chi tiết đánh giá -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtChiTietDG"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:text="Chi tiết đánh giá"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <!-- Filter buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/bg_filter_gray"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/txtTatCa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Tất cả"
                            android:textColor="#734322"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtSLTatCa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="(909)"
                            android:textColor="#9C7C4B2A"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_filter_orange"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txtCoNhanXet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Có nhận xét"
                            android:textColor="#734322"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtSLNhanXet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="(768)"
                            android:textColor="#9C7C4B2A"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_filter_orange"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txtCoHinhAnh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Có hình ảnh"
                            android:textColor="#734322"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtSLHinhAnh"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="(105)"
                            android:textColor="#9C7C4B2A"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_filter_gray"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtSao2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sao"
                                android:textColor="#734322"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:id="@+id/imgSao2"
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:layout_marginStart="6dp"
                                android:src="@drawable/ic_star" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView69"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="(Tất cả)"
                            android:textColor="#9C7C4B2A"
                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Review item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgAvatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/avatar_evaluate"
                            app:civ_border_color="#FFFFFF"
                            app:civ_border_width="0dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Anh Thư"
                                android:textColor="#734322"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView31"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView32"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView30"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView29"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView28"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_star" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/imageView33"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_participated" />

                        <TextView
                            android:id="@+id/txtDaThamGia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="Đã tham gia • 01/10/2025"
                            android:textColor="#E544C364"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtNoiDungDG"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:justificationMode="inter_word"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Buổi học diễn ra rất thú vị và thoải mái. Giảng viên hướng dẫn tận tình, luôn giải thích chi tiết từng bước và đưa ra nhiều mẹo nhỏ trong bếp mà trước giờ mình chưa biết. Không khí lớp học vui vẻ, mọi người được trực tiếp thực hành chứ không chỉ ngồi nghe lý thuyết."
                        android:textAlignment="gravity"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:lineSpacingExtra="4dp" />

                    <!-- Phản hồi -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="16dp"
                        android:background="#BFD9D9D9"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txtPhanHoi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phản hồi của trung tâm"
                            android:textColor="#734322"
                            android:textSize="17sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtNDPhanHoi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:justificationMode="inter_word"
                            android:text="LocalCooking Class cảm ơn bạn đã tham gia lớp học, hẹn gặp bạn ở những lớp học khác nhé."
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:lineSpacingExtra="3dp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view11"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="10dp"
                        android:background="#EEEEEE" />

                    <!-- Review item 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imgAvatar2"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:src="@drawable/avatar_evaluate"
                            app:civ_border_color="#FFFFFF"
                            app:civ_border_width="0dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtTen2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thảo Vy"
                                android:textColor="#734322"
                                android:textSize="17sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView39"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView38"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView37"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView36"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_star" />

                                <ImageView
                                    android:id="@+id/imageView35"
                                    android:layout_width="22dp"
                                    android:layout_height="22dp"
                                    android:src="@drawable/ic_star" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/imageView34"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_participated" />

                        <TextView
                            android:id="@+id/txtDaThamGia2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:text="Đã tham gia • 28/09/2025"
                            android:textColor="#E544C364"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtNoiDungDG2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:justificationMode="inter_word"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Lớp học rất bổ ích, giảng viên nhiệt tình và thân thiện. Mình học được nhiều kỹ năng nấu ăn mới."
                        android:textAlignment="gravity"
                        android:textColor="#000000"
                        android:textSize="17sp"
                        android:lineSpacingExtra="4dp" />

                    <!-- Hình ảnh đánh giá -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <ImageView
                            android:id="@+id/imgReview1"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avt" />

                        <ImageView
                            android:id="@+id/imgReview2"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="10dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avt" />

                        <ImageView
                            android:id="@+id/imgReview3"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avt" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view12"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="28dp"
                        android:layout_marginBottom="10dp"
                        android:background="#EEEEEE" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
