<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF9EF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Ảnh voucher -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgMonAn"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:contentDescription="Food Image"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/RoundedImage"
            app:srcCompat="@drawable/voucher" />

        <!-- Thông tin voucher -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTieuDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dành cho hội viên"
                android:textColor="#6A3B1A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMoTa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Giảm 20%, thêm ưu đãi bên dưới"
                android:textColor="#9A6A3B1A"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtNguoi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Từ 1 người"
                android:textColor="#B2292D32"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtHSD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="HSD: 10/10/2025"
                android:textColor="#B2292D32"
                android:textSize="15sp" />

        </LinearLayout>

        <!-- Radio button chọn -->
        <RadioButton
            android:id="@+id/rdbChon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:buttonTint="#DC874C"
            android:scaleX="1.3"
            android:scaleY="1.3" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
