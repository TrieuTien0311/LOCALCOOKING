<?xml version="1.0" encoding="utf-8"?>
<!-- Layout cho tablet - fragment_detail_description.xml -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DetailDescriptionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="16dp"
            android:paddingRight="20dp"
            android:paddingBottom="40dp">

            <TextView
                android:id="@+id/textView41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giáo viên đứng lớp"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_detail_description"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/imgGiaoVien"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/avt" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/txtTenGV"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bà Nguyễn Thị Thương"
                            android:textColor="#BA5632"
                            android:textSize="22sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/btnDownTeacher"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="12dp"
                            android:src="@drawable/ic_down_tt" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtMoTaGV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Đầu bếp trưởng - Chuyên gia ẩm thực cung đình Huế"
                        android:textColor="#454545"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/txtKinhNghiem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:drawableLeft="@drawable/ic_medal_tt"
                        android:drawablePadding="6dp"
                        android:text="20 năm kinh nghiệm"
                        android:textColor="#454545"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:id="@+id/txtAn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/txtLichSuKinhNghiem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Bếp trưởng – Nhà hàng Cung Đình Huế (2008–2020): Xây dựng thực đơn, chuẩn hóa món cung đình, đào tạo đội bếp."
                            android:textAlignment="gravity"
                            android:textColor="#454545"
                            android:textSize="16sp"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView42"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giới thiệu lớp học"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtGioiThieu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_detail_description"
                android:justificationMode="inter_word"
                android:padding="20dp"
                android:text="Khám phá hương vị đặc trưng của ẩm thực cố đô Huế - nơi giao thoa giữa tinh hoa cung đình và phong vị dân gian. Trong buổi học này, bạn sẽ được trải nghiệm trực tiếp việc chế biến các món ăn truyền thống mang đậm dấu ấn văn hóa xứ Huế."
                android:textAlignment="gravity"
                android:textColor="#454545"
                android:textSize="17sp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/txtTenLopHoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch trình lớp học"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="Giá trị sau buổi học"
                android:textColor="#000000"
                android:textSize="22sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bg_detail_description"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingTop="20dp"
                android:paddingRight="16dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/txtGiaTriBuoiHoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:justificationMode="inter_word"
                    android:text="Nắm vững cách chế biến 6 món ăn đặc trưng của Huế, có thể tự tin làm lại tại nhà cho gia đình và bạn bè thưởng thức."
                    android:textColor="#454545"
                    android:textSize="17sp"
                    android:lineSpacingExtra="4dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
