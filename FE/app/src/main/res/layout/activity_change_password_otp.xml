<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5E6D3"
        tools:context=".ChangePasswordOtp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/innerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5E6D3"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".ChangePasswordOtp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:contentDescription="Back"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Quay lại"
                android:textColor="#6B4423"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

            <!-- Logo -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="40dp"
                android:contentDescription="Logo"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Local Cooking Text -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="cursive"
                android:text="LocalCooking"
                android:textColor="#8B4513"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivLogo" />

            <!-- Card Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardOtp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAppName">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:background="#F4C19A"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Đổi mật khẩu"
                        android:textColor="#3D2817"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <!-- Form Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp">

                        <!-- Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="15dp"
                            android:gravity="center"
                            android:text="Nhập mã OTP đã được gửi đến email của bạn"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <!-- OTP Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="20dp"
                            android:text="Nhập mã OTP"
                            android:textColor="#3D2817"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <!-- OTP Input Boxes -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="25dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/otpBox1"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/otp_box_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="#3D2817"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/otpBox2"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/otp_box_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="#3D2817"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/otpBox3"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/otp_box_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="#3D2817"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/otpBox4"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/otp_box_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="#3D2817"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/otpBox5"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/otp_box_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="#3D2817"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/otpBox6"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/otp_box_bg"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:textColor="#3D2817"
                                android:textSize="24sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <!-- Verify Button -->
                        <Button
                            android:id="@+id/btnXacNhan"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="20dp"
                            android:backgroundTint="#B73F41"
                            android:text="Xác nhận"
                            android:textAllCaps="false"
                            android:textColor="#FAF6F6"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>