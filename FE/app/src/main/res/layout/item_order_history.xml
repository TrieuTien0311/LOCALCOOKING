<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/imgMonAnOrder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="48dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/hue_h" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTieuDe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="Ẩm thực địa phương Huế"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtSoLuongNguoi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:drawableLeft="@drawable/ic_participants"
                android:drawablePadding="6dp"
                android:drawableTint="#757575"
                android:gravity="center_vertical"
                android:text="1 người"
                android:textColor="#757575"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtLich"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:drawableLeft="@drawable/ic_calendar"
                android:drawablePadding="6dp"
                android:drawableTint="#757575"
                android:gravity="center_vertical"
                android:text="14:00 - 17:00, 02/10/2025"
                android:textColor="#757575"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtDiaDiem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:drawableLeft="@drawable/ic_location"
                android:drawablePadding="6dp"
                android:drawableTint="#757575"
                android:gravity="center_vertical"
                android:text="23 Lê Duẩn, Đà Nẵng"
                android:textColor="#757575"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtGia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="clip_horizontal"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_coin"
                    android:drawablePadding="6dp"
                    android:drawableTint="#757575"
                    android:gravity="center_vertical"
                    android:text="715.000₫"
                    android:textColor="#757575"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnHuyDat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#C62828"
                    android:minWidth="0dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Hủy đặt"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    app:cornerRadius="6dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtThoiGianHuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="15dp"
                android:drawablePadding="6dp"
                android:drawableTint="#757575"
                android:text="Đã huỷ lúc 10:52 - T3, 11/11/2024"
                android:textAlignment="textEnd"
                android:textColor="#BA5632"
                android:textSize="12sp"
                android:textStyle="italic"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtDatLai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp"
                    android:drawableEnd="@drawable/ic_next"
                    android:drawablePadding="4dp"
                    android:drawableTint="#D84B42"
                    android:gravity="center_vertical"
                    android:text="Đặt lại"
                    android:textColor="#D84B42"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txtDanhGia2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_next"
                    android:drawablePadding="4dp"
                    android:drawableTint="#D84B42"
                    android:gravity="center_vertical"
                    android:text="Xem đánh giá"
                    android:textColor="#D84B42"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>