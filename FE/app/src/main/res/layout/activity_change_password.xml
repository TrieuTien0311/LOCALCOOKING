<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5E6D3"
        tools:context=".ChangePassword">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/innerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5E6D3"
            app:layout_constraintTop_toTopOf="parent"
            tools:context=".ChangePassword">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:contentDescription="Back"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Quay lại"
                android:textColor="#6B4423"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/btnBack"
                app:layout_constraintStart_toEndOf="@id/btnBack"
                app:layout_constraintTop_toTopOf="@id/btnBack" />

            <!-- Logo -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginTop="40dp"
                android:contentDescription="Logo"
                android:src="@drawable/logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Local Cooking Text -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="cursive"
                android:text="LocalCooking"
                android:textColor="#8B4513"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivLogo" />

            <!-- Card Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardChangePassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAppName">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:padding="0dp">

                    <!-- Title -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:background="#F4C19A"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Đổi mật khẩu"
                        android:textColor="#3D2817"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <!-- Form Inputs -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingRight="15dp">

                        <!-- Description -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:text="Cập nhật mật khẩu mới cho tài khoản của bạn"
                            android:textColor="#666666"
                            android:textSize="12sp" />

                        <!-- Current Password Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilMatKhauHienTai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:hint="Mật khẩu hiện tại"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:boxBackgroundMode="none"
                            app:hintAnimationEnabled="true"
                            app:hintEnabled="true"
                            app:hintTextColor="#666666"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="#666666">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/idMatKhauHienTai"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/input_bg"
                                android:hint="Mật khẩu hiện tại"
                                android:inputType="textPassword"
                                android:paddingLeft="30dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="50dp"
                                android:paddingBottom="10dp"
                                android:textColor="#000000"
                                android:textColorHint="#666666" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Forgot Password Link -->
                        <TextView
                            android:id="@+id/tvQuenMatKhau"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            android:gravity="end"
                            android:text="Quên mật khẩu ?"
                            android:textColor="#A73121"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <!-- New Password Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilMatKhauMoi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:hint="Mật khẩu mới"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:boxBackgroundMode="none"
                            app:hintAnimationEnabled="true"
                            app:hintEnabled="true"
                            app:hintTextColor="#666666"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="#666666">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/idMatKhauMoi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/input_bg"
                                android:hint="Mật khẩu mới"
                                android:inputType="textPassword"
                                android:paddingLeft="30dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="50dp"
                                android:paddingBottom="10dp"
                                android:textColor="#000000"
                                android:textColorHint="#666666" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Confirm New Password Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilXacNhanMatKhau"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:hint="Xác nhận mật khẩu mới"
                            app:boxBackgroundColor="@android:color/transparent"
                            app:boxBackgroundMode="none"
                            app:hintAnimationEnabled="true"
                            app:hintEnabled="true"
                            app:hintTextColor="#666666"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="#666666">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/idXacNhanMatKhau"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/input_bg"
                                android:hint="Xác nhận mật khẩu mới"
                                android:inputType="textPassword"
                                android:paddingLeft="30dp"
                                android:paddingTop="10dp"
                                android:paddingEnd="50dp"
                                android:paddingBottom="10dp"
                                android:textColor="#000000"
                                android:textColorHint="#666666" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Info Text -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="5dp"
                            android:gravity="center"
                            android:text="Chúng tôi sẽ gửi mã xác thực đến email này."
                            android:textColor="#999999"
                            android:textSize="13sp" />

                        <!-- Submit Button -->
                        <Button
                            android:id="@+id/btnGuiMaXacNhan"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="20dp"
                            android:backgroundTint="#B73F41"
                            android:text="Gửi mã xác nhận"
                            android:textAllCaps="false"
                            android:textColor="#FAF6F6"
                            android:textSize="16sp" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>